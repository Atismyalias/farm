<question>
    <cmd>
        <code>hr.roles.show</code>
        <regex>roles?</regex>
        <label>roles</label>
        <help>Show all roles assigned at the moment</help>
        <cmds>
            <cmd>
                <code>hr.roles.assign</code>
                <regex>assign|add|register</regex>
                <label>assign</label>
                <help>Assign new project role</help>
                <opts>
                    <opt>
                        <name>role</name>
                        <regex>[A-Z]{2,4}</regex>
                        <help>Project role, all caps, e.g. ARC or PO</help>
                    </opt>
                    <opt>
                        <name>login</name>
                        <regex>[a-zA-Z0-9\-]+</regex>
                        <help>GitHub login of the user</help>
                    </opt>
                </opts>
            </cmd>
            <cmd>
                <code>hr.roles.resign</code>
                <regex>resign|remove|unregister</regex>
                <label>resign</label>
                <help>Resign a person from a project role</help>
                <opts>
                    <opt>
                        <name>role</name>
                        <regex>[A-Z]{2,4}</regex>
                        <help>Project role, all caps, e.g. ARC or PO</help>
                    </opt>
                    <opt>
                        <name>login</name>
                        <regex>[a-zA-Z0-9\-]+</regex>
                        <help>GitHub login of the user</help>
                    </opt>
                </opts>
            </cmd>
        </cmds>
    </cmd>
    <cmd>
        <code>scope.wbs.show</code>
        <regex>wbs</regex>
        <label>wbs</label>
        <help>Show the entire WBS</help>
    </cmd>
    <cmd>
        <code>bootstrap</code>
        <regex>bootstrap</regex>
        <label>bootstrap</label>
        <help>Bootstrap the project to initialize all project artifacts</help>
    </cmd>
</question>
