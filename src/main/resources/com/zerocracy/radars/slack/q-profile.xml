<question>
    <cmd>
        <code>profile.aliases.show</code>
        <regex>alias(es)?</regex>
        <label>aliases</label>
        <help>Show all your currently registered aliases</help>
    </cmd>
    <cmd>
        <code>profile.rate.show</code>
        <regex>rate</regex>
        <label>rate</label>
        <help>Show your current hourly rate</help>
        <cmds>
            <cmd>
                <code>profile.rate.set</code>
                <regex>set</regex>
                <label>set</label>
                <help>Change your current hourly rate</help>
                <opts>
                    <opt>
                        <name>rate</name>
                        <regex>.+</regex>
                        <help>Hourly rate, e.g. $15</help>
                    </opt>
                </opts>
            </cmd>
        </cmds>
    </cmd>
    <cmd>
        <code>profile.skills.show</code>
        <regex>skills?</regex>
        <label>skills</label>
        <help>Show your currently registered technical skills</help>
        <cmds>
            <cmd>
                <code>profile.skills.add</code>
                <regex>add|set</regex>
                <label>add</label>
                <help>Add a new skill</help>
                <opts>
                    <opt>
                        <name>skill</name>
                        <regex>.+</regex>
                        <help>Your skill, e.g. "java.spring" or "cpp"</help>
                    </opt>
                </opts>
            </cmd>
        </cmds>
    </cmd>
    <cmd>
        <code>profile.wallet.show</code>
        <regex>wallet</regex>
        <label>wallet</label>
        <help>Show your currently registered wallet (payment details)</help>
        <cmds>
            <cmd>
                <code>profile.wallet.set</code>
                <regex>set</regex>
                <label>set</label>
                <help>Change your payment information</help>
                <opts>
                    <opt>
                        <name>bank</name>
                        <regex>[a-z]+</regex>
                        <help>Bank, e.g. "paypal" or "bitcoin"</help>
                    </opt>
                    <opt>
                        <name>wallet</name>
                        <regex>.+</regex>
                        <help>Technical payment details, e.g. PayPal email or Bitcoin wallet number</help>
                    </opt>
                </opts>
            </cmd>
        </cmds>
    </cmd>
</question>
