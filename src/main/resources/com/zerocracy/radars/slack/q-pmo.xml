<question>
    <cmd>
        <code>links.show</code>
        <regex>links?</regex>
        <label>links</label>
        <help>Show all resources the project is linked with</help>
        <cmds>
            <cmd>
                <code>links.add</code>
                <regex>add|set</regex>
                <label>add</label>
                <help>Add a new resource</help>
                <opts>
                    <opt>
                        <name>rel</name>
                        <regex>[a-z]+</regex>
                        <help>Kind of resource, e.g. "github"</help>
                    </opt>
                    <opt>
                        <name>href</name>
                        <regex>.+</regex>
                        <help>Resource details, for example GitHub repository name</help>
                    </opt>
                </opts>
            </cmd>
            <cmd>
                <code>links.remove</code>
                <regex>del|delete|remove</regex>
                <label>remove</label>
                <help>Remove an existing project resource</help>
                <opts>
                    <opt>
                        <name>rel</name>
                        <regex>[a-z]+</regex>
                        <help>Kind of resource, e.g. "github"</help>
                    </opt>
                    <opt>
                        <name>href</name>
                        <regex>.+</regex>
                        <help>Resource details, for example GitHub repository name</help>
                    </opt>
                </opts>
            </cmd>
        </cmds>
    </cmd>
</question>
