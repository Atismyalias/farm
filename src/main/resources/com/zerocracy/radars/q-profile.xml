<question>
    <cmd>
        <code>Hello</code>
        <regex>hi|hello|hey|morning|good morning</regex>
        <label>hello</label>
        <help>Just say hello</help>
    </cmd>
    <cmd>
        <code>Version</code>
        <regex>version|ver</regex>
        <label>version</label>
        <help>Print current version of the bot</help>
    </cmd>
    <cmd>
        <code>Invite a friend</code>
        <regex>invite</regex>
        <label>invite</label>
        <help>Invite a friend</help>
        <opts>
            <opt>
                <name>login</name>
                <regex>[a-z0-9-_]+</regex>
                <help>GitHub login of your friend</help>
            </opt>
        </opts>
    </cmd>
    <cmd>
        <code>Apply to a project</code>
        <regex>apply</regex>
        <label>apply</label>
        <help>Send your profile to the project, intending to join them</help>
        <opts>
            <opt>
                <name>project</name>
                <regex>[A-Z0-9]{9}</regex>
                <help>Project ID you're applying to</help>
            </opt>
        </opts>
    </cmd>
    <cmd>
        <code>Quit a project</code>
        <regex>quit</regex>
        <label>quit</label>
        <help>Immediately exit the project</help>
        <opts>
            <opt>
                <name>project</name>
                <regex>[A-Z0-9]{9}</regex>
                <help>Project ID you're existing</help>
            </opt>
        </opts>
    </cmd>
    <cmd>
        <code>Show rate</code>
        <regex>rate</regex>
        <label>rate</label>
        <help>Show your current hourly rate</help>
        <cmds>
            <cmd>
                <code>Set rate</code>
                <regex>set</regex>
                <label>set</label>
                <help>Change your current hourly rate</help>
                <opts>
                    <opt>
                        <name>rate</name>
                        <regex>.+</regex>
                        <help>Hourly rate, e.g. $15</help>
                    </opt>
                </opts>
            </cmd>
        </cmds>
    </cmd>
    <cmd>
        <code>Show skills</code>
        <regex>skills?</regex>
        <label>skills</label>
        <help>Show your currently registered technical skills</help>
        <cmds>
            <cmd>
                <code>Add skill</code>
                <regex>add|set</regex>
                <label>add</label>
                <help>Add a new skill</help>
                <opts>
                    <opt>
                        <name>skill</name>
                        <regex>.+</regex>
                        <help>Your skill, e.g. "java.spring" or "cpp"</help>
                    </opt>
                </opts>
            </cmd>
        </cmds>
    </cmd>
    <cmd>
        <code>Show wallet</code>
        <regex>wallet</regex>
        <label>wallet</label>
        <help>Show your currently registered wallet (payment details)</help>
        <cmds>
            <cmd>
                <code>Set wallet</code>
                <regex>set</regex>
                <label>set</label>
                <help>Change your payment information</help>
                <opts>
                    <opt>
                        <name>bank</name>
                        <regex>[a-z]+</regex>
                        <help>Bank, e.g. "paypal" or "bitcoin"</help>
                    </opt>
                    <opt>
                        <name>wallet</name>
                        <regex>.+</regex>
                        <help>Technical payment details, e.g. PayPal email or Bitcoin wallet number</help>
                    </opt>
                </opts>
            </cmd>
        </cmds>
    </cmd>
</question>
